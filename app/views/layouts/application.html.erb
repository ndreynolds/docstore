<!DOCTYPE html>
<html>
<head>
  <title>DOCSTORE</title>
  <link href='http://fonts.googleapis.com/css?family=PT+Sans:400,700' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <script type="text/javascript">
    window.SERVER_ROOT = '<%= request.protocol + request.host_with_port %>';
  </script>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="header">
    <%= link_to documents_path do %>
      <i class="icon-cloud"></i> DOCSTORE
    <% end %>

    <% if flash[:notice] %>
      <div class="notice">
        <%= flash[:notice] %>
        <a class="close"><i class="icon-remove-circle"></i></a>
      </div>
    <% end %>

    <% if params[:controller] == 'documents' && params[:action] == 'index' %>

      <button data-dialog="upload-dialog" id="form-open-btn" class="btn btn-dark"> 
        <i class="icon-cloud-upload"></i> Upload
      </button>

      <div class="view-options">
        <%= link_to params.merge(:view => 'grid'), :class => params[:view] == 'list' ? '' : 'active' do %>
          <i class="icon-large icon-th"></i>
        <% end %>
        <%= link_to params.merge(:view => 'list'), :class => params[:view] == 'list' ? 'active' : '' do %>
          <i class="icon-large icon-list"></i>
        <% end %>
      </div>

    <% else %>

      <%= link_to new_document_path, :id => 'form-open-btn', :class => 'btn btn-dark' do %>
        <i class="icon-cloud-upload"></i> Upload
      <% end %>

    <% end %>

    <input type="text" class="search" placeholder="Search documents..." value="<%= params[:search] %>">
  </div>

  <%= yield %>
</body>
</html>
