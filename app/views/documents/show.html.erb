<h2><%= @document.title %></h2>

<span class="tag-group">
  <% @document.tags.each do |tag| %>
    <%= link_to tag, documents_path(:tag => tag), :class => 'tag' %>
  <% end %>
</span>

<span class="actions-group">
  <%= link_to @document.file_url.to_s, :class => 'action-btn', :download => @document.filename do %>
    <i class="icon-cloud-download icon-large" title="Download"></i>
  <% end %>
  <%= link_to edit_document_path(@document), :class => 'action-btn' do %>
    <i class="icon-pencil icon-large" title="Edit"></i>
  <% end %>
  <%= link_to @document, :class => 'action-btn', method: :delete, data: { confirm: 'Are you sure?' } do %>
    <i class="icon-trash icon-large" title="Delete"></i>
  <% end %>
</span>

<h3><%= @document.author %></h2>

<embed src="<%= @document.file_url %>" width="100%" height="600px">
